{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // TODO: @refactor - Uncomment these once the project is refactored
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2022", "dom"],
    "paths": {
      "@syn/pipes": ["src/app/@pipes/index.ts"],
      "@syn/utils": ["src/app/@utils/index.ts"],
      "@syn/components": ["src/app/@components/index.ts"],
      "@syn/models": ["src/app/@models/index.ts"],
      "@syn/services": ["src/app/@services/index.ts"],
      "@syn/directives": ["src/app/@directives/index.ts"],
      "@syn/data-services": ["src/app/@data-services/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/typings.d.ts"],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "annotateForClosureCompiler": false
  }
}
